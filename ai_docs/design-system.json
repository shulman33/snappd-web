{
  "product": {
    "name": "Snappd",
    "tagline": "The fastest way to capture, annotate, and share screenshots",
    "brandPersonality": ["fast", "modern", "professional", "friendly"],
    "targetAudience": [
      "knowledge workers",
      "developers",
      "designers",
      "product managers"
    ]
  },
  "colors": {
    "primary": {
      "main": "222.2 47.4% 11.2%",
      "foreground": "210 40% 98%"
    },
    "secondary": {
      "main": "210 40% 96.1%",
      "foreground": "222.2 47.4% 11.2%"
    },
    "background": {
      "main": "0 0% 100%",
      "foreground": "222.2 47.4% 11.2%"
    },
    "muted": {
      "main": "210 40% 96.1%",
      "foreground": "215.4 16.3% 46.9%"
    },
    "border": "214.3 31.8% 91.4%",
    "accent": {
      "main": "210 40% 96.1%",
      "foreground": "222.2 47.4% 11.2%"
    },
    "destructive": {
      "main": "0 84.2% 60.2%",
      "foreground": "210 40% 98%"
    },
    "annotationTools": {
      "red": "#ef4444",
      "orange": "#f97316",
      "yellow": "#eab308",
      "green": "#22c55e",
      "blue": "#3b82f6",
      "purple": "#a855f7",
      "pink": "#ec4899",
      "gray": "#6b7280"
    }
  },
  "typography": {
    "fontFamily": "Inter, system-ui, -apple-system, sans-serif",
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    },
    "fontWeights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeights": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.75
    }
  },
  "spacing": {
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem"
  },
  "borderRadius": {
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
    "md": "0 4px 6px -1px rgb(0 0 0 / 0.1)",
    "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1)",
    "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1)"
  },
  "components": {
    "button": {
      "variants": ["default", "secondary", "ghost", "destructive", "outline"],
      "sizes": ["sm", "default", "lg", "icon"],
      "usageGuidelines": {
        "default": "Main CTAs (1 per view)",
        "secondary": "Alternative actions",
        "ghost": "Tertiary actions",
        "destructive": "Delete/remove actions only",
        "icon": "Must include tooltips"
      }
    },
    "input": {
      "types": ["text", "email", "password", "search"],
      "states": ["default", "error", "disabled", "focus"],
      "validation": {
        "showErrorIcon": true,
        "showErrorMessage": true,
        "errorColor": "destructive"
      }
    },
    "dialog": {
      "parts": [
        "trigger",
        "content",
        "header",
        "title",
        "description",
        "footer"
      ],
      "maxWidth": "500px",
      "animation": "fadeIn + scaleIn"
    },
    "tooltip": {
      "trigger": "hover or focus",
      "delay": "150ms",
      "position": ["top", "bottom", "left", "right"]
    },
    "card": {
      "parts": ["header", "title", "description", "content", "footer"],
      "padding": "1.5rem",
      "borderRadius": "lg"
    }
  },
  "annotationTools": [
    {
      "id": "arrow",
      "label": "Arrow",
      "shortcut": "A",
      "icon": "ArrowRight",
      "defaultColor": "#3b82f6",
      "properties": {
        "thickness": {
          "min": 1,
          "max": 10,
          "default": 3
        },
        "color": "string",
        "style": ["solid", "dashed"]
      }
    },
    {
      "id": "text",
      "label": "Text",
      "shortcut": "T",
      "icon": "Type",
      "defaultColor": "#000000",
      "properties": {
        "fontSize": {
          "min": 12,
          "max": 48,
          "default": 16
        },
        "color": "string",
        "background": ["none", "solid"],
        "fontWeight": ["regular", "bold"]
      }
    },
    {
      "id": "rectangle",
      "label": "Rectangle",
      "shortcut": "R",
      "icon": "Square",
      "defaultColor": "#ef4444",
      "properties": {
        "thickness": {
          "min": 1,
          "max": 10,
          "default": 2
        },
        "color": "string",
        "fill": ["none", "solid"],
        "opacity": {
          "min": 0,
          "max": 100,
          "default": 100
        }
      }
    },
    {
      "id": "circle",
      "label": "Circle",
      "shortcut": "C",
      "icon": "Circle",
      "defaultColor": "#22c55e",
      "properties": {
        "thickness": {
          "min": 1,
          "max": 10,
          "default": 2
        },
        "color": "string",
        "fill": ["none", "solid"],
        "opacity": {
          "min": 0,
          "max": 100,
          "default": 100
        }
      }
    },
    {
      "id": "blur",
      "label": "Blur",
      "shortcut": "B",
      "icon": "Eye",
      "properties": {
        "intensity": {
          "min": 5,
          "max": 20,
          "default": 10
        },
        "pattern": ["pixelate", "gaussian"]
      }
    },
    {
      "id": "highlight",
      "label": "Highlight",
      "shortcut": "H",
      "icon": "Highlighter",
      "defaultColor": "#eab308",
      "properties": {
        "opacity": {
          "min": 0,
          "max": 100,
          "default": 30
        },
        "color": "string"
      }
    },
    {
      "id": "pen",
      "label": "Pen",
      "shortcut": "P",
      "icon": "Pencil",
      "defaultColor": "#000000",
      "properties": {
        "thickness": {
          "min": 1,
          "max": 10,
          "default": 2
        },
        "color": "string"
      }
    }
  ],
  "keyboardShortcuts": {
    "global": {
      "capture": "Ctrl+Shift+S",
      "undo": "Ctrl+Z",
      "redo": "Ctrl+Y",
      "escape": "Close modals/dropdowns"
    },
    "navigation": {
      "tab": "Navigate interactive elements",
      "enter": "Activate buttons",
      "space": "Activate buttons",
      "arrows": "Navigate tool options"
    },
    "tools": {
      "A": "Arrow tool",
      "T": "Text tool",
      "R": "Rectangle tool",
      "C": "Circle tool",
      "B": "Blur tool",
      "H": "Highlight tool",
      "P": "Pen tool"
    }
  },
  "layouts": {
    "editorToolbar": {
      "structure": ["logo", "tools", "colors", "spacer", "actions", "close"],
      "height": "64px",
      "padding": "1rem"
    },
    "editorCanvas": {
      "maxWidth": "100vw",
      "maxHeight": "calc(100vh - 128px)",
      "background": "#f5f5f5"
    },
    "editorFooter": {
      "structure": ["zoomControls", "spacer", "shareButton", "saveButton"],
      "height": "64px",
      "padding": "1rem"
    },
    "dashboardSidebar": {
      "width": "256px",
      "items": [
        {
          "label": "Dashboard",
          "icon": "LayoutDashboard",
          "path": "/"
        },
        {
          "label": "Screenshots",
          "icon": "Image",
          "path": "/screenshots"
        },
        {
          "label": "Settings",
          "icon": "Settings",
          "path": "/settings"
        },
        {
          "label": "Billing",
          "icon": "CreditCard",
          "path": "/billing"
        }
      ]
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "animations": {
    "transitions": {
      "fast": "150ms cubic-bezier(0.4, 0, 0.2, 1)",
      "base": "200ms cubic-bezier(0.4, 0, 0.2, 1)",
      "slow": "300ms cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "keyframes": {
      "fadeIn": {
        "from": {
          "opacity": 0
        },
        "to": {
          "opacity": 1
        }
      },
      "slideUp": {
        "from": {
          "opacity": 0,
          "transform": "translateY(10px)"
        },
        "to": {
          "opacity": 1,
          "transform": "translateY(0)"
        }
      },
      "scaleIn": {
        "from": {
          "opacity": 0,
          "transform": "scale(0.95)"
        },
        "to": {
          "opacity": 1,
          "transform": "scale(1)"
        }
      }
    },
    "usage": {
      "buttonHover": {
        "scale": 1.02,
        "duration": "150ms"
      },
      "modalOpen": {
        "animation": ["fadeIn", "scaleIn"],
        "duration": "200ms"
      },
      "tooltip": {
        "animation": "fadeIn",
        "duration": "150ms"
      },
      "toast": {
        "animation": "slideUp",
        "duration": "300ms"
      }
    }
  },
  "copywriting": {
    "voiceAndTone": {
      "principles": [
        "Clear over clever",
        "Helpful not pushy",
        "Professional but friendly"
      ]
    },
    "buttons": {
      "primary": {
        "capture": "Take Screenshot",
        "share": "Share Link",
        "save": "Save Changes",
        "upgrade": "Upgrade to Pro"
      },
      "secondary": {
        "cancel": "Cancel",
        "learnMore": "Learn More",
        "download": "Download"
      }
    },
    "errorPattern": "[What happened] + [Why] + [How to fix]",
    "emptyStates": {
      "noScreenshots": "No screenshots yet\nTake your first screenshot to get started",
      "noResults": "No results found\nTry a different search term",
      "emptyTrash": "Trash is empty\nDeleted screenshots will appear here"
    }
  },
  "pricing": {
    "tiers": [
      {
        "name": "Free",
        "price": "$0",
        "period": "forever",
        "features": [
          "10 screenshots per month",
          "All annotation tools",
          "30-day link expiry",
          "Snappd watermark"
        ],
        "cta": "Current Plan"
      },
      {
        "name": "Pro",
        "price": "$9",
        "period": "month",
        "features": [
          "Unlimited screenshots",
          "Permanent links",
          "Cloud storage",
          "Remove watermark",
          "Priority support"
        ],
        "cta": "Upgrade to Pro",
        "highlight": true
      },
      {
        "name": "Team",
        "price": "$9",
        "period": "user/month",
        "minUsers": 3,
        "billingPeriod": "annual",
        "features": [
          "Everything in Pro",
          "Shared workspace",
          "Collaboration features",
          "Admin controls"
        ],
        "cta": "Contact Sales"
      }
    ]
  },
  "watermark": {
    "freeTier": {
      "enabled": true,
      "content": "Created with Snappd",
      "position": "bottom-right",
      "padding": "16px",
      "style": {
        "background": "rgba(0, 0, 0, 0.5)",
        "color": "#ffffff",
        "fontSize": "14px",
        "borderRadius": "0.375rem",
        "backdropBlur": "sm"
      }
    },
    "proTier": {
      "enabled": false
    }
  },
  "accessibility": {
    "colorContrast": {
      "text": "4.5:1 minimum",
      "largeText": "3:1 minimum",
      "uiComponents": "3:1 minimum"
    },
    "focusIndicator": {
      "style": "2px solid primary",
      "offset": "2px",
      "borderRadius": "md"
    },
    "ariaLabels": {
      "required": true,
      "iconButtons": "Always include aria-label",
      "dialogs": "Use aria-labelledby and aria-describedby"
    }
  },
  "performance": {
    "images": {
      "format": "PNG",
      "compression": "80%",
      "maxDimensions": "3840x2160",
      "thumbnailSize": "400x300",
      "webDelivery": "WebP with PNG fallback"
    },
    "bundleSize": {
      "extensionPopup": "< 100KB",
      "extensionEditor": "< 500KB",
      "landingPage": "< 200KB",
      "dashboard": "< 300KB"
    },
    "codeSplitting": {
      "enabled": true,
      "lazyLoadComponents": ["Editor", "Dashboard"]
    }
  },
  "icons": {
    "library": "lucide-react",
    "commonIcons": [
      "Camera",
      "Image",
      "Share2",
      "Download",
      "Trash2",
      "Settings",
      "User",
      "CreditCard",
      "HelpCircle",
      "Check",
      "X",
      "AlertCircle",
      "ArrowRight",
      "Type",
      "Square",
      "Circle",
      "Minus",
      "Pencil",
      "Eye",
      "Highlighter",
      "RotateCcw",
      "RotateCw",
      "ZoomIn",
      "ZoomOut",
      "Copy",
      "ExternalLink",
      "Crown"
    ],
    "standardSize": "h-4 w-4",
    "largeSize": "h-5 w-5"
  },
  "stateManagement": {
    "patterns": {
      "loading": {
        "component": "Skeleton or Spinner",
        "minDisplayTime": "300ms"
      },
      "error": {
        "component": "Alert with icon and message",
        "actions": ["Retry", "Dismiss"]
      },
      "empty": {
        "component": "Centered message with CTA",
        "includeIcon": true
      },
      "success": {
        "component": "Toast notification",
        "duration": "3000ms",
        "position": "bottom-right"
      }
    }
  },
  "codeStandards": {
    "typescript": {
      "strict": true,
      "target": "ES2022",
      "module": "commonjs"
    },
    "naming": {
      "components": "PascalCase",
      "functions": "camelCase",
      "constants": "UPPER_SNAKE_CASE",
      "files": "kebab-case"
    },
    "fileStructure": [
      "src/components/ui (Shadcn components)",
      "src/components/editor",
      "src/components/dashboard",
      "src/components/shared",
      "src/pages",
      "src/hooks",
      "src/utils",
      "src/types",
      "src/styles"
    ]
  }
}
